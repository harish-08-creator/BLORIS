<input type="password" placeholder="Enter Password" name="Password" required>  
  
<label for="psw-repeat"><b>Re-type Password</b></label>  
<input type="password" placeholder="Retype Password" name="Confirm-Password" required>  
<button type="submit" class="registerbtn" onclick="Validation()">Register</button>    
</form>  


<script>
     
  function Validation() {
      var password = document.forms["Institution Registration"]["Password"];
      var cpassword = document.forms["Institution Registration"]["Confirm-Password"];
      var check=true;

      if(password.value != cpassword.value){
        window.alert("Password Mismatch, Re-enter password");
        cpassword.focus();
        check=false;
        return false;
      }

